    "@reactioncommerce/api-plugin-tags": "~1.0.0",
    "@reactioncommerce/api-plugin-taxes-flat-rate": "~1.0.0",
    "@reactioncommerce/api-plugin-taxes": "~1.0.0",
    "@reactioncommerce/api-plugin-translations": "~1.1.0",
    "@reactioncommerce/api-utils": "~1.12.0",
    "@reactioncommerce/db-version-check": "~1.0.0",
    "@reactioncommerce/file-collections-sa-gridfs": "~0.1.0",
    "@reactioncommerce/file-collections": "~0.7.0",
